@model SE2025.Models.Carer_Access

@{
    ViewData["Title"] = "Patient Details";
}

<div class="details-container1">
    <div class="details-names">
        <h1>Welcome, @Model.Carer.User.First_Name</h1>
        <h3>Patient: @Model.Patient.User.First_Name</h3>
    </div>
    <div class="details-container2">
        <div class="details-card"><h2>Risk Score: [Value]</h2></div>
        <div class="details-card"><h2>Last Movement: [Time]</h2></div>
        <div class="details-card"><h2>Alerts: [Number]</h2></div>
        <div class="details-movement">
            <h2>Daily Movement Plan</h2>
            <p>[Time]</p>
            <p>[Action]</p>
            <div>
                <button>Mark as Done</button>
            </div>
        </div>
        <div class="details-notes">
            <h2>Alerts & Notes</h2>
            <p>[Time] - [Alert/Note]</p>
            <p>[Time] - [Alert/Note]</p>
        </div>
    </div>
    <div class="details-container3">
        <div class="details-messages">
            <h2>Messages</h2>
            <img src=""/>
        </div>
        <div class="details-graph">
            <h2>Pressure Graph</h2>
            <img src=""/>
        </div>
        @* <div>
            <button><a asp-action="Index">Back to My Patients</a></button>
        </div> *@
    </div>
</div>
<style>
    .details-container1 {
        display: grid;
        grid-template-columns: repeat(12, minmax(0, 1fr));
        gap: 10px;
    }
    
    .details-names {
        grid-column: span 12;
        grid-row: 1;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .details-container2 {
        grid-column: 1 / span 6;
        display: grid;
        grid-template-columns: repeat(6, minmax(0, 1fr));
        gap: 10px;
        margin-top: 20px;
    }

    .details-card {
        grid-column: span 2; /* Container spans 6 columns */
        aspect-ratio: 1 / 1; /* Make cards square */
        text-align: center;
        box-shadow: 2px 2px 8px rgba(0,0,0,0.1);
    }

    .details-movement {
        grid-column: 1 / span 6;
        aspect-ratio: 3 / 1;
    }

    .details-notes {
        grid-column: 1 / span 6;
        aspect-ratio: 3 / 1;
    }

    .details-container3 {
        display: grid;
        grid-template-columns: repeat(1, minmax(0, 1fr));
        grid-column: 7 / span 6;        
        gap: 10px;
        margin-top: 20px;
    }

    .details-messages {
        grid-column: span 1;
        aspect-ratio: 2 / 1;
    }

    .details-graph {
        grid-column: span 1;
        aspect-ratio: 2 / 1;
    }

    .details-movement, .details-messages, .details-notes, .details-graph {
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 15px;
        box-shadow: 2px 2px 8px rgba(0,0,0,0.1);
    }

    .details-movement button {
        background-color: #28a745;
        color: white;
        border: none;
        padding: 8px 12px;
        border-radius: 4px;
        cursor: pointer;
    }
    .details-movement button:hover {
        background-color: #218838;
            }
</style>